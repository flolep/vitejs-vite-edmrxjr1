{
  "rules": {
    "sessions": {
      "$sessionId": {
        ".read": "data.child('active').val() === true",
        ".write": "auth != null && (!data.exists() || data.child('createdBy').val() === auth.uid)",
        "scores": {
          ".read": "root.child('sessions').child($sessionId).child('active').val() === true",
          ".write": "auth != null && root.child('sessions').child($sessionId).child('createdBy').val() === auth.uid"
        },
        "chrono": {
          ".read": "root.child('sessions').child($sessionId).child('active').val() === true",
